@{
    ViewData["Title"] = "Home Page";
    
}

<div class="text-center">
    <h1 class="display-4">EL TIEMPO HOY</h1>
    <p>Temperatura: @ViewData.GetViewDataInfo("TemperaturaActual").Value</p>
    <p>Temperatura máxima: @ViewData.GetViewDataInfo("TemperaturaMaxima").Value</p>
    <p>Temperatura mínima: @ViewData.GetViewDataInfo("TemperaturaMinima").Value</p>
    <p>Coordenadas: @ViewData.GetViewDataInfo("Latitud").Value, @ViewData.GetViewDataInfo("Longitud").Value</p>
    <form action="" method="post">
        <div class="form-horizontal">
            <h4>Formulario</h4>
            <hr />
            <div class="text-danger" />
            <input type="hidden" data-val="true" data-val-required="The ID field is required." id="id2" name="ID2" value="7" />
            <div class="form-group">
                <label class="control-label col-md-2" for="Genre">Introduce la ciudad</label>
                <div class="col-md-10">
                    <input class="form-control" type="text" id="ID" name="ID" placeholder="Ciudad" />
                    <span class="text-danger field-validation-valid" data-valmsg-for="Genre" data-valmsg-replace="true" id="ID" name="ID"></span>
                </div>
            </div>
            <!-- Markup removed for brevity -->
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>
</div>
